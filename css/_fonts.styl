font-path = '../fonts/clearsans/'

@font-face {
    font-family: 'clear_sansregular';
    src: url('../fonts/clearsans/regular/ClearSans-Regular-webfont.eot');
    src: url('../fonts/clearsans/regular/ClearSans-Regular-webfont.eot?#iefix') format('embedded-opentype'),
         url('../fonts/clearsans/regular/ClearSans-Regular-webfont.woff') format('woff'),
         url('../fonts/clearsans/regular/ClearSans-Regular-webfont.ttf') format('truetype'),
         url('../fonts/clearsans/regular/ClearSans-Regular-webfont.svg#clear_sansregular') format('svg');
    font-weight: normal;
    font-style: normal;
}

